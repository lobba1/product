<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="100">

            <TextBox x:Name="ProductNameTextBox" Width="150" Margin="0,0,10,0" TextChanged="ProductNameTextBox_TextChanged" Text="uohouhil"/>
            <TextBox x:Name="ProductPriceTextBox" Width="150" Margin="0,0,10,0" Text="bkjbkj"/>
            <Button Content="Add Product" Click="AddProduct_Click" Width="100"/>
            
        </StackPanel>

        <ListBox x:Name="ProductListBox" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
